{
  "name": "@28stoneconsulting/openfin-ngrx",
  "version": "0.0.0-development",
  "author": "Alexey Valner",
  "scripts": {
    "start": "npm run demo:serve",
    "build": "npm run lib:build && npm run demo:build",
    "test": "ng test demo --watch false && ng test openfin-ngrx --watch false",
    "lint": "ng lint",
    "lib:build": "ng build openfin-ngrx",
    "lib:test": "ng test openfin-ngrx",
    "lib:ci:test": "ng test openfin-ngrx --watch false --progress false --browsers ChromeHeadless --code-coverage",
    "demo:test": "ng test demo",
    "demo:ci:test": "ng test demo --watch false --progress false --browsers ChromeHeadless --code-coverage",
    "demo:build": "ng build demo",
    "demo:ng:serve": "ng serve demo",
    "demo:openfin:serve": "wait-on http-get://localhost:4200/ && openfin -l -c projects/demo/app.window.fin.json",
    "demo:serve": "npm-run-all -p demo:ng:serve demo:openfin:serve",
    "lint:commit": "commitlint -e",
    "semantic-release": "semantic-release",
    "codecov": "cat ./coverage/openfin-ngrx/lcov.info | codecov --pipe"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~11.2.14",
    "@angular/cdk": "~11.2.13",
    "@angular/common": "~11.2.14",
    "@angular/compiler": "~11.2.14",
    "@angular/core": "~11.2.14",
    "@angular/forms": "~11.2.14",
    "@angular/material": "^11.2.13",
    "@angular/platform-browser": "~11.2.14",
    "@angular/platform-browser-dynamic": "~11.2.14",
    "@angular/router": "~11.2.14",
    "@ngrx/store": "^11.1.1",
    "rxjs": "~6.6.7",
    "tslib": "^2.0.0",
    "xxhashjs": "^0.2.2",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1101.4",
    "@angular-devkit/build-ng-packagr": "~0.1002.0",
    "@angular/cli": "~11.1.4",
    "@angular/compiler-cli": "~11.2.14",
    "@angular/language-service": "~11.2.14",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@ngrx/effects": "^11.1.1",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^15.6.1",
    "@types/openfin": "^51.0.0",
    "codecov": "^3.5.0",
    "codelyzer": "^5.1.2",
    "core-js": "2.6.1",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.0.3",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^11.1.4",
    "npm-run-all": "4.1.5",
    "openfin-cli": "^3.0.2",
    "protractor": "~7.0.0",
    "semantic-release": "^15.13.19",
    "ts-node": "~7.0.0",
    "tslint": "~6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "~4.0.7",
    "wait-on": "3.2.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --edit"
    }
  },
  "repository": "https://github.com/28StoneConsulting/openfin-ngrx",
  "license": "ISC",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "release": {
    "pkgRoot": "dist/openfin-ngrx"
  }
}
